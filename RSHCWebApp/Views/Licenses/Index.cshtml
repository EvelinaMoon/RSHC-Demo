@model IEnumerable<RSHCEnteties.License>

@{
    ViewBag.Title = "Lisenses";
}

<!DOCTYPE html>


<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>@ViewBag.Title</h2>
                <ol>
                    <li>@Html.ActionLink("RSHC Demo", "Index", "Home", new { area = "" }, new { @class = "logo me-auto me-lg-0" })</li>
                    <li>@ViewBag.Title</li>
                </ol>
            </div>

        </div>
    </section><!-- End Breadcrumbs -->

    <section class="inner-page">
        <div class="container">
            <p>
                @Html.ActionLink("Create New", "Create", new { area = "" }, new { @class = "btn btn-outline-dark" })
            </p>
            <table class="table" id="table" data-show-columns="true"
                   data-search="true"
                   data-show-toggle="true"
                   data-pagination="true"
                   data-url="json/data1.json"
                   data-resizable="true">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Person.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Jurisdiction)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.License1)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Person.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Jurisdiction)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.License1)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </section>

</main><!-- End #main -->

