@model System.Web.Mvc.HandleErrorInfo

@{
    ViewBag.Title = "Error403";
}

<!DOCTYPE html>

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <h2>@ViewBag.Title</h2>
                <ol>
                    <li>@Html.ActionLink("RSHC Demo", "Index", "Home", new { area = "" }, new { @class = "logo me-auto me-lg-0" })</li>
                    <li>@ViewBag.Title</li>
                </ol>
            </div>

        </div>
    </section><!-- End Breadcrumbs -->

    <section class="inner-page">
        <div class="container">
            <p>
                @{
                    if (String.IsNullOrEmpty(ViewBag.errorMessage))
                    {
                        <h2 class="text-danger">No access</h2>
                    }
                    else
                    {
                        <h2 class="text-danger">@ViewBag.errorMessage</h2>
                    }
                }
            </p>
            <img src="~/RshcCustomTheme/img/head-bang-employee.gif">
        </div>
    </section>

</main><!-- End #main -->
